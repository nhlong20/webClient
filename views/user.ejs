<%- include("./partials/header.ejs") %>

    <h5 class="pt-3 pl-5">Hồ sơ của tôi</h5>
    <p class="pl-5">Quản lý thông tin và bảo mật tài khoản</p>
    <hr>
    <div class="d-flex justify-content-around">
        <div class=" pt-5 d-flex flex-column bd-highlight">

            <div class="pl-4">
                <p>
                    Tên:
                    <%=user.name%>
                </p>
                <p>
                    Email:
                    <%=user.email%>
                </p>
            </div>
        </div>
        <div class=" pt-5 d-flex flex-column bd-highlight justify-content-center">
            <div class="d-flex justify-content-center ">
                <img width="200" height="200" src="<%=user.coverImage%>" alt="">

            </div>

            <form class="mt-5" action="/user/change-information" method="POST" enctype="multipart/form-data">

                <div class=" d-flex justify-content-center">
                    <input type="file" id="file" name="images" accept="image/jpeg, image/png, image/jpg">
                </div>
                <div class="d-flex justify-content-center">
                    <p>Định dạng: .jpeg, .png, .jpg</p>
                </div>
                <div class="pb-5 d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>




    <%- include("./partials/footer.ejs") %>